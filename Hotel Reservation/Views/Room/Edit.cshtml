@model RoomViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1>Edit</h1>
</div>

<form asp-controller="Room" asp-action="Edit" method="post">
    <label>Capacity</label>
    <input class="form-control" type="text" name="capacity" value="@Model.Capacity" />
    <label>Room Type</label>
    <input class="form-control" type="text" name="room type" value="@Model.Type" />
    <label>Price on Bed</label>
    <input class="form-control" type="text" name="price on bed" value="@Model.PriceOnBed" />
    <label>Is Free</label>
    <input class="form-control" type="text" name="is free" value="@Model.IsFree" />
<label>Number</label>
    <input class="form-control" type="text" name="number" value="@Model.Number" />
    <div class="text-right mt-2">
        <button class="btn btn-success " type="submit" asp-route-id="@Model.Id">Edit</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>
