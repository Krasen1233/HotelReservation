@model ClientViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1>Details</h1>
</div>

<div>
    <p><span class="font-weight-bold">Id:</span>@Model.Id</p>
    <p><span class="font-weight-bold">First Name:</span>@Model.FirstName</p>
    <p><span class="font-weight-bold">Third Name:</span>@Model.ThirdName</p>
    <p><span class="font-weight-bold">Telephone:</span>@Model.Telephone</p>
    <p><span class="font-weight-bold">Email</span>@Model.Email</p>
    <p><span class="font-weight-bold">Is Adult</span>@Model.IsAdult</p>

    <div class="text-right mt-3">
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</div>
