@model ReservationViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1>Details</h1>
</div>

<div>
    <p><span class="font-weight-bold">Id:</span>@Model.Id</p>
    <p><span class="font-weight-bold">People Count:</span>@Model.PeopleCount</p>
    <p><span class="font-weight-bold">Room Type:</span>@Model.RoomType</p>
    <p><span class="font-weight-bold">Price:</span>@Model.Price</p>
    <p><span class="font-weight-bold">Room:</span>@Model.RoomNumber</p>
    <p><span class="font-weight-bold">Start Date:</span>@Model.StartDate</p>
    <p><span class="font-weight-bold">End Date:</span>@Model.EndDate</p>

    <div class="text-right mt-3">
        <a class="=btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</div>
